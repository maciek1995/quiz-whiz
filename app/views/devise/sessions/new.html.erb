<div class="login-wrapper">
  <div class="login-container">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form"}) do |f| %>
    <div class="field ">
      <%= f.email_field :email, autofocus: true, class: "login-input", placeholder: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "login-input", placeholder: "password"  %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "login-btn" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "login-btn" %>
    </div>
    <%= render "devise/shared/links" %>
    <% end %>

  </div>
</div>
