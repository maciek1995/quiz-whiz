<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="profile">
        <img class="profile__avatar" src=<%= current_user.avatar_path %>>
        <p class="profile__username"><%= current_user.username %></p>
        <p class="profile__game-statistics">PLAYED GAMES: <%= current_user.games_played %></p>
        <p class="profile__game-statistics">GAMES WON: <%= current_user.games_won %></p>
        <p class="profile__game-statistics">GAMES DRAWN: <%= current_user.games_drawn %></p>
        <%= button_to "Quick Game!", play_now_games_path, method: :post, class: "btn profile__quick-game" %>
      </div>
    </div>
    <div class="col-md-6">
      <%= react_component('OnlineUsersList', {available_users: @available_users, currentUser: current_user, authenticity_token: form_authenticity_token}) %>
    </div>
  </div>
</div>
