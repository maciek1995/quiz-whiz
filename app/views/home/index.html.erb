<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="profile">
        <img src=<%= current_user.avatar_path %>>
        <p><%= current_user.username %></p>
        <p>played games: <%= current_user.games_played %></p>
        <p>games won: <%= current_user.games_won %></p>
        <p>games drawn: <%= current_user.games_drawn %></p>
        <%= button_to "Quick Game!", play_now_games_path, method: :post %>
      </div>
    </div>
    <div class="col-md-6">
      <%= react_component('OnlineUsersList', {available_users: @available_users, currentUser: current_user, authenticity_token: form_authenticity_token}) %>
    </div>
  </div>
</div>
